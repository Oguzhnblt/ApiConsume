@model List<ResultRoomDTO>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int count = 0;
}

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Oda Numarası</th>
        <th>Oda Başlık</th>
        <th>Fiyat</th>
        <th>Yatak Odası Sayısı</th>
        <th>Banyo Sayısı</th>
        <th>Oda Kapak Görseli</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>

    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <th>@item.RoomNumber</th>
            <td>@item.Title</td>
            <td>@item.Price</td>
            <td>@item.BedCount</td>
            <td>@item.BathCount</td>
            <td>@item.RoomCoverImage</td>
            <td>@item.Description</td>
            <td><a href="/AdminRoom/DeleteRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a></td>
            <td><a href="/AdminRoom/UpdateRoom/@item.RoomID" class="btn mb-1 btn-rounded btn-outline-success">Güncelle</a></td>
        </tr>
    }

</table>
<a href="/AdminRoom/AddRoom/" class="btn mb-1 btn-rounded btn-outline-info">Yeni Oda Girişi</a>
